#changing pi-blaster to pcm mode is necessary if you want to use audio on the pi for, say, speech synthesis.
echo "CHANGING PI-BLASTER FROM PWM TO PCM..."

#replace /home/pi/pi-bla.../pi-blaster with location of pi-blaster executable
./piblasterpcm.sh

echo "PI-BLASTER SETTINGS CHANGED. NOW RUNNING SERVERS..."

./mjpgserverrunner.sh
./nodeserverrunner.sh
